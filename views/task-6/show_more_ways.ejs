<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show more ways</title>
    <link rel="stylesheet" href="/stylesheets/task-6/show_more_page.css">
</head>

<body>

    <form action="/task_6/show_more">

        <input type="text" name="first_name" id="first_name" placeholder="Enter First name" value="<%= first_name %>" tabindex="2">
        <input type="text" name="last_name" id="last_name" placeholder="Enter Last name" value="<%= last_name %>" tabindex="3">
        <input type="text" name="gender" id="gender" placeholder="Enter gender" value="<%= gender %>" tabindex="4">
        <input type="text" name="email" id="email" placeholder="Enter email" value="<%= email %>" tabindex="5">
        <input type="text" name="phone_no" id="phone_no" placeholder="Enter phone_no" value="<%= phone_no %>" tabindex="6">

        <select name="option" id="option">
            <option name="and" id="and" value="AND">AND</option>
            <option name="or" id="or" value="OR" >OR</option>
        </select>

        <input type="submit" value="Go" id="go">

    </form>


    <% try { if (first_name == undefined && last_name == undefined && gender == undefined && email == undefined && phone_no == undefined && option == undefined ) {
       } else { %>
        
        <table>

<tr>
    <th>First Name</th>
    <th>Last name</th>
    <th>gender</th>
    <th>email</th>
    <th>phone no</th>
    <th>created at</th>
</tr>

<% data.forEach(function(item) { %>
    <tr>
        <td><%= item.first_name %></td>
        <td><%= item.last_name %></td>
        <td><%= item.gender %></td>
        <td><%= item.email %></td>
        <td><%= item.phone_no %></td>
        <td><%= item.created_at %></td>
    </tr>
<% }); %>

</table>

        <% }; } catch(e) { console.log(e); } %>

</body>

</html>